{% extends "index.twig" %}

{% block body %}

	{% if id == 0 %}
		{% set group = "" %}
	{% else %}
		{% set group = app.data.groups[id] %}
	{% endif %}

	<form method="POST" action="{{ path('group-save') }}">
		<input type="hidden" name="id" value="{{ id }}" />

		<legend>{% if id == 0 %} {{ app.i18n.titles.add_group }} {% else %} {{ app.i18n.titles.edit_group }} {% endif %} </legend>

		<table class="table table-striped">
		<tr>
			<td style="width: 70px;">
				<label for="name">{{ app.i18n.labels.name }}</label>
			</td>
			<td>
				<input type="text" name="name" value="{{ group }}" id="name" class="form-control" autocomplete="off" />
			</td>
		</tr>
		</table>

		
		<input type="submit" name="send" value="{{ app.i18n.labels.save }}" class="btn btn-primary" style="float: left; margin-left: 10px;">

		<a href="{{ path('groups') }}" class="btn btn-danger" style="float: right; margin-right: 10px;">
			{{ app.i18n.labels.back }}
		</a>

	</form>

{% endblock %}